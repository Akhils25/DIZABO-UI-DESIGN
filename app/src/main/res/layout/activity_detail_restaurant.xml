<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#D9D9D9"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:background="#ffff"
    android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="267dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg"/>
            <androidx.cardview.widget.CardView
                app:cardElevation = "16dp"
                app:cardCornerRadius = "160dp"
                app:cardBackgroundColor="#3D000000"
                android:layout_width = "50dp"
                android:layout_height = "50dp"
                android:layout_marginTop="45dp"
                android:layout_marginStart="28dp">

                <!-- simple image view -->
                <ImageView
                    android:scaleType = "center"
                    android:src = "@drawable/stroke_1_2x"
                    android:layout_width = "26dp"
                    android:layout_gravity="center"
                    android:layout_height = "23dp"/>
            </androidx.cardview.widget.CardView>
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marito Italiano"
            android:textSize="24sp"
            android:textColor="#333936"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:text="$$"
                android:textColor="#868686"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".03"
                android:layout_gravity="center"
                android:src="@drawable/ellipse_11_2x"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="Chinese"
                android:textColor="#868686"
                android:layout_marginStart="3dp"
                android:textSize="14sp"
                android:fontFamily="@font/inter_regular"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".03"
                android:src="@drawable/ellipse_11_2x" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:layout_marginStart="3dp"
                android:text="Indonesian"
                android:textColor="#868686"
                android:textSize="14sp"
                android:fontFamily="@font/inter_regular"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".03"
                android:layout_gravity="center"
                android:src="@drawable/ellipse_11_2x"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="3dp"
                android:fontFamily="@font/inter_regular"
                android:text="Deshi food"
                android:textColor="#868686"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight=".3"
                android:layout_marginTop="6dp"
                android:src="@drawable/free_delivery_2x"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".78"
                android:layout_marginStart="3dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Free"
                    android:textSize="16sp"
                    android:textColor="#010F07"
                    android:fontFamily="@font/inter_regular"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delivery"
                    android:textSize="12sp"
                    android:textColor="#868686"
                    android:fontFamily="@font/inter_regular"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight=".02"
                android:background="#ECECEC"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight=".3"
                android:layout_marginStart="1dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/delivery_2x"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".86"
                android:layout_marginStart="3dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2.07 km"
                    android:textSize="16sp"
                    android:textColor="#010F07"
                    android:fontFamily="@font/inter_regular"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Distance"
                    android:textSize="12sp"
                    android:textColor="#868686"
                    android:fontFamily="@font/inter_regular"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight=".02"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:background="#ECECEC"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight=".3"
                android:layout_marginStart="4dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/group_3161_2x"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginStart="3dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4.3"
                    android:textSize="16sp"
                    android:textColor="#010F07"
                    android:fontFamily="@font/inter_regular"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(200+ Ratings)"
                    android:textSize="12sp"
                    android:textColor="#868686"
                    android:fontFamily="@font/inter_regular"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffff"
        android:layout_marginTop="4dp">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:scrollbars="none"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:listitem="@layout/recycler_detail_resturant_horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Most Popular"
            android:textColor="#333936"
            android:textSize="18sp"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="vertical"
                    tools:itemCount="5"
                    tools:listitem="@layout/recycler_detail_resturant_popular"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp">

    </LinearLayout>

</LinearLayout>
