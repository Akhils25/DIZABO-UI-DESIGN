<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:background="#ffff">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="71dp"
                android:layout_height="28dp"
                android:layout_marginTop="90dp"
                android:orientation="horizontal"
                android:background="@drawable/layout_border_other_shop_listing">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    android:layout_weight=".6"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/group_4_2x"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="15% OFF"
                        android:layout_marginTop="4dp"
                        android:textSize="8sp"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="#ffff"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Up to AED 20"
                        android:fontFamily="@font/inter_semibold"
                        android:textSize="8sp"
                        android:textColor="#ffff"/>
                </LinearLayout>
                
            </LinearLayout>

        </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bourger Lounch"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="16dp"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:fontFamily="@font/inter_semibold"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content"
                        android:text="Chineese Cousine "
                        android:layout_marginTop="8dp"
                        android:textSize="10sp"
                        android:textColor="#808080"
                        android:fontFamily="@font/inter_regular"/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="5dp"
                            android:layout_weight=".1"
                            android:layout_marginTop="3dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ellipse_11_2x"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Closes at 11.00 PM"
                            android:layout_marginTop="8dp"
                            android:textSize="10sp"
                            android:textColor="#808080"
                            android:fontFamily="@font/inter_regular"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:layout_marginStart="16dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".55"
                            android:text="Open"
                            android:textColor="#22A45D"
                            android:textSize="10sp"
                            android:fontFamily="@font/inter_semibold"/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="5dp"
                            android:layout_weight=".19"
                            android:layout_marginTop="3dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ellipse_11_2x"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:layout_marginStart="2dp"
                            android:text="Al-Karama"
                            android:textColor="#979797"
                            android:textSize="10sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="16dp"
                            android:layout_weight=".16"
                            android:src="@drawable/free_delivery_2x"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight=".20"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Free"
                                android:textColor="#000000"
                                android:textSize="10.05sp"
                                android:fontFamily="@font/inter_medium"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Delivery"
                                android:textColor="#888888"
                                android:textSize="8.04sp"
                                android:fontFamily="@font/inter_light"/>
                        </LinearLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="20.08dp"
                            android:layout_weight=".01"
                            android:layout_marginStart="2dp"
                            android:background="#ECECEC"/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="19dp"
                            android:layout_weight=".19"
                            android:src="@drawable/delivery_2x"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight=".24"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2.07 km"
                                android:textColor="#000000"
                                android:textSize="10.05sp"
                                android:fontFamily="@font/inter_medium"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Distance"
                                android:textColor="#888888"
                                android:textSize="8.04sp"
                                android:fontFamily="@font/inter_light"/>
                        </LinearLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="20.08dp"
                            android:layout_weight=".01"
                            android:layout_marginStart="3dp"
                            android:background="#ECECEC"/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="18dp"
                            android:layout_weight=".13"
                            android:src="@drawable/group_3161_2x"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginStart="2dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="4.3"
                                android:textColor="#000000"
                                android:textSize="10.05sp"
                                android:fontFamily="@font/inter_medium"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="(200+ Ratings)"
                                android:textColor="#888888"
                                android:textSize="8.04sp"
                                android:fontFamily="@font/inter_light"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight=".2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:textColor="#E95F6E"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:fontFamily="@font/inter_bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="min"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:fontFamily="@font/inter_medium"/>

                </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>