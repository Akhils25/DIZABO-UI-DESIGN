<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We have sent a verification code to"
        android:textColor="#4C4C4C"
        android:textSize="12sp"
        android:fontFamily="@font/inter_semibold"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="28dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+917012001002"
        android:textSize="15sp"
        android:textColor="#000000"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="9dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="51dp"
        android:layout_marginTop="29dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginEnd="15dp"
            android:background="@drawable/layout_otp_verification">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:maxLength="1"
                android:background="#EEF2F5"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginEnd="15dp"
            android:background="@drawable/layout_otp_verification">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLength="1"
                android:layout_gravity="center"
                android:background="#EEF2F5"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginEnd="15dp"
            android:background="@drawable/layout_otp_verification">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLength="1"
                android:layout_gravity="center"
                android:background="#EEF2F5"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginEnd="15dp"
            android:background="@drawable/layout_otp_verification">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="#EEF2F5"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="@drawable/layout_otp_verification">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLength="1"
                android:layout_gravity="center"
                android:background="#EEF2F5"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/layout_otp_verification_button"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify OTP"
            android:textColor="#ffff"
            android:textSize="15sp"
            android:fontFamily="@font/inter_medium"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Didn't receive code?"
            android:textSize="12sp"
            android:textColor="#4C4C4C"
            android:gravity="center"
            android:fontFamily="@font/inter_semibold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Resend (28s)"
            android:textColor="#256FE8"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="1dp"
            android:background="#EBEBEB"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".4"
            android:layout_height="wrap_content"
            android:text="or"
            android:textSize="12sp"
            android:textColor="#888888"
            android:gravity="center"
            android:fontFamily="@font/inter_semibold"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="1dp"
            android:background="#EBEBEB"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_signup_using_facebook_or_google"
        android:textSize="10sp"
        android:textColor="#4C4C4C"
        android:fontFamily="@font/inter_regular"
        android:gravity="center"
        android:layout_marginTop="15dp"/>

</LinearLayout>