                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:text="@string/see_all"
                    android:textColor="#3B8231"
                    android:textSize="13sp"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:fontFamily="@font/inter_medium"/>
            </LinearLayout>
